          color: #333;
          margin-bottom: 20px;
          font-size: 24px;
        }

        .tab-placeholder p {
          color: #666;
          font-size: 16px;
          margin-bottom: 15px;
          line-height: 1.5;
        }

        .btn {
          padding: 10px 16px;
          border: none;
          border-radius: 4px;
          cursor: pointer;
          font-size: 14px;
          font-weight: 500;
          transition: all 0.3s ease;
          text-decoration: none;
          display: inline-block;
          text-align: center;
        }

        .btn-primary {
          background-color: #2196f3;
          color: white;
        }

        .btn-primary:hover {
          background-color: #1976d2;
        }

        .btn-secondary {
          background-color: #757575;
          color: white;
        }

        .btn-secondary:hover {
          background-color: #616161;
        }

        @media (max-width: 768px) {
          .admin-header {
            padding: 15px 20px;
            flex-direction: column;
            gap: 15px;
          }

          .admin-header h1 {
            font-size: 24px;
          }

          .admin-navigation {
            padding: 0 20px;
          }

          .admin-tabs {
            flex-wrap: wrap;
          }

          .admin-tab {
            padding: 12px 16px;

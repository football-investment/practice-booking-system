      <div className="admin-header">
        <h1>Admin Panel</h1>
        <div className="admin-user-info">
          <span>Welcome, {user.name}</span>
          <button onClick={logout} className="btn btn-secondary">Logout</button>
        </div>
      </div>

      <div className="admin-navigation">
        <div className="admin-tabs">
          <button 
            className={`admin-tab ${activeTab === 'semesters' ? 'active' : ''}`}
            onClick={() => setActiveTab('semesters')}
          >
            ðŸ“… Semesters
          </button>
          <button 
            className={`admin-tab ${activeTab === 'users' ? 'active' : ''}`}
            onClick={() => setActiveTab('users')}
          >
            ðŸ‘¥ Users
          </button>
          <button 
            className={`admin-tab ${activeTab === 'sessions' ? 'active' : ''}`}
            onClick={() => setActiveTab('sessions')}
          >
            ðŸ“š Sessions
          </button>
          <button 
            className={`admin-tab ${activeTab === 'groups' ? 'active' : ''}`}
            onClick={() => setActiveTab('groups')}
          >
            ðŸ‘« Groups
          </button>
          <button 
            className={`admin-tab ${activeTab === 'reports' ? 'active' : ''}`}
            onClick={() => setActiveTab('reports')}
          >
            ðŸ“Š Reports
          </button>
        </div>
      </div>

      <div className="admin-content">
        {activeTab === 'semesters' && <SemesterManager />}
        
        {activeTab === 'users' && (
          <div className="tab-placeholder">
            <h2>User Management</h2>
            <p>ðŸš§ UserManager component will be implemented in the next phase.</p>
            <p>This will allow you to create, edit, and manage user accounts.</p>
          </div>
        )}

        {activeTab === 'sessions' && (
          <div className="tab-placeholder">
            <h2>Session Management</h2>
            <p>ðŸš§ SessionCreator component will be implemented in the next phase.</p>
            <p>This will allow you to create and manage practice sessions.</p>
          </div>
        )}

        {activeTab === 'groups' && (
          <div className="tab-placeholder">
            <h2>Group Management</h2>
            <p>ðŸš§ GroupManager component will be implemented in the next phase.</p>

{
  "name": "lfa-cypress-e2e",
  "version": "1.0.0",
  "description": "Cypress end-to-end tests for LFA Education Center (Streamlit frontend)",
  "private": true,
  "scripts": {
    "cy:open": "ELECTRON_RUN_AS_NODE= cypress open",
    "cy:run": "ELECTRON_RUN_AS_NODE= cypress run",
    "cy:run:auth": "ELECTRON_RUN_AS_NODE= cypress run --spec 'cypress/e2e/auth/**'",
    "cy:run:admin": "ELECTRON_RUN_AS_NODE= cypress run --spec 'cypress/e2e/admin/**'",
    "cy:run:instructor": "ELECTRON_RUN_AS_NODE= cypress run --spec 'cypress/e2e/instructor/**'",
    "cy:run:player": "ELECTRON_RUN_AS_NODE= cypress run --spec 'cypress/e2e/player/**'",
    "cy:run:student": "ELECTRON_RUN_AS_NODE= cypress run --spec 'cypress/e2e/student/**'",
    "cy:run:system": "ELECTRON_RUN_AS_NODE= cypress run --spec 'cypress/e2e/system/**'",
    "cy:run:errors": "ELECTRON_RUN_AS_NODE= cypress run --spec 'cypress/e2e/error_states/**'",
    "cy:run:smoke": "ELECTRON_RUN_AS_NODE= cypress run --env grepTags=@smoke",
    "cy:run:critical": "ELECTRON_RUN_AS_NODE= cypress run --env grepTags=@critical --spec 'cypress/e2e/admin/**/*.cy.js,cypress/e2e/instructor/**/*.cy.js,cypress/e2e/player/**/*.cy.js,cypress/e2e/student/**/*.cy.js,cypress/e2e/auth/registration.cy.js'",
    "cy:run:admin:critical": "ELECTRON_RUN_AS_NODE= cypress run --env grepTags=@critical --spec 'cypress/e2e/admin/**/*.cy.js'",
    "cy:run:instructor:critical": "ELECTRON_RUN_AS_NODE= cypress run --env grepTags=@critical --spec 'cypress/e2e/instructor/**/*.cy.js'",
    "cy:run:student:critical": "ELECTRON_RUN_AS_NODE= cypress run --env grepTags=@critical --spec 'cypress/e2e/player/**/*.cy.js,cypress/e2e/student/**/*.cy.js'",
    "cy:run:non-critical": "ELECTRON_RUN_AS_NODE= cypress run --spec 'cypress/e2e/auth/login.cy.js,cypress/e2e/error_states/http_409_conflict.cy.js,cypress/e2e/error_states/unauthorized.cy.js,cypress/e2e/player/dashboard.cy.js,cypress/e2e/student/enrollment_409_live.cy.js,cypress/e2e/student/error_states.cy.js,cypress/e2e/system/cross_role_e2e.cy.js'",
    "cy:run:headed": "ELECTRON_RUN_AS_NODE= cypress run --headed --no-exit",
    "cy:run:ci": "cypress run --headless --browser chrome",
    "cy:analyze": "node ci-result-processor.js all"
  },
  "devDependencies": {
    "@cypress/grep": "^4.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "cypress": "^13.17.0"
  }
}
